[core]
	editor = vim
	pager = less -FX

[commit]
	gpgsign = true

[pager]
	show = diff-highlight | less -FX
	diff = diff-highlight | less -FX
	log = diff-highlight | less -FX

[credential]
	helper = libsecret

[include]
	path = personal

[includeIf "gitdir:~/dev/smaato/**"]
	path = smaato

[filter "lfs"]
	clean = git-lfs clean -- %f
	smudge = git-lfs smudge -- %f
	process = git-lfs filter-process
	required = true
